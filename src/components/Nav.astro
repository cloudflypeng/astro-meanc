---
// import {  siteConfig,  } from '@src/config.ts'
import { NavMenu, siteConfig } from '../config';
const { siteName } = siteConfig;
---

<header
  class='bg-background/75 backdrop-blur border-b border-gray-200 dark:border-gray-800 -mb-px sticky top-0 z-50 lg:mb-0 lg:border-0'
>
  <nav
    class='mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl flex items-center justify-between gap-3 h-[70px]'
  >
    <a href='/' class='text-lg font-bold no-underline text-current'
      >{siteName}</a
    >
    <div class='hidden md:flex space-x-4'>
      {
        NavMenu.map((link) => {
          return (
            <a
              href={link.href}
              class='block no-underline text-current py-2 text-l font-medium font-mono'
            >
              {link.name}
            </a>
          );
        })
      }
    </div>

    <div class='md:hidden'>
      <button class='px-2 py-1 rounded' id='menu-button'>more</button>
    </div>
  </nav>
</header>

<!-- Mobile menu, hidden by default -->
<div
  class='fixed bg-white w-full h-screen py-8 px-4'
  id='mobile-menu'
  style='display: none;'
>
  {
    NavMenu.map((link) => {
      return (
        <a href={link.href} class='block no-underline text-current py-2'>
          {link.name}
        </a>
      );
    })
  }
</div>

<script>
  document.getElementById('menu-button').addEventListener('click', function () {
    var menu = document.getElementById('mobile-menu');
    if (menu.style.display === 'none') {
      menu.style.display = 'block';
    } else {
      menu.style.display = 'none';
    }
  });
</script>
